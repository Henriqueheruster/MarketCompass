<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/tela_mercados"
		android:background="@color/VerdePrincipal">
	
	
	<View
			android:layout_width="415dp"
			android:layout_height="1143dp"
			android:id="@+id/view"
			android:background="@color/AzulPrincipal"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginTop="44dp" />
	
	<TextView
			android:text="Mercados"
			android:layout_width="237dp"
			android:layout_height="60dp"
			android:id="@+id/textView"
			android:textSize="34sp"
			android:gravity="center"
			android:textStyle="bold"
			app:layout_constraintTop_toTopOf="@+id/view"
			android:layout_marginTop="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="84dp"
			android:layout_marginEnd="99dp"
			app:layout_constraintEnd_toEndOf="@+id/view" />
	
	
	<SearchView
			android:layout_width="361dp"
			android:layout_height="45dp"
			android:background="@drawable/botoes_redondos"
			android:layout_marginBottom="7dp"
			app:layout_constraintBottom_toTopOf="@+id/view"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="24dp"
			app:layout_constraintVertical_bias="1.0"
			android:id="@+id/searchView" />
	
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/PAIDOTREM"
			tools:layout_editor_absoluteX="-26dp"
			app:layout_constraintTop_toTopOf="@+id/view"
			android:layout_marginTop="8dp">
		
		<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/marketRecyclerView"
				android:layout_width="304dp"
				android:layout_height="159dp"
				android:padding="8dp"
				app:layout_constraintStart_toStartOf="@+id/view"
				android:layout_marginStart="44dp"
				app:layout_constraintBottom_toBottomOf="parent"
				android:layout_marginBottom="224dp" />
	
	</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>